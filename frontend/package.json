{
  "name": "ng-blog",
  "version": "1.0.0",
  "description": "Blog about Java, Angular 2, MongoDb, Docker, Unreal Engine",
  "scripts": {
    "build": "rimraf dist && webpack --config config/webpack.prod.js --progress --profile --bail",
    "clean": "npm cache clean && npm run rimraf -- node_modules dist coverage",
    "clean:install": "npm set progress=false && npm install",
    "clean:start": "npm start",
    "preclean:install": "npm run clean",
    "preclean:start": "npm run clean",
    "start": "concurrently \"npm run start:server\" \"npm run start:ui\"",
    "start:server": "json-server --watch src/json-server/db.json --port 3002",
    "start:ui": "webpack-dev-server --colors --watch --port 3001 --content-base src/public --inline --hot"
  },
  "dependencies": {
    "@angular/common": "~2.4.0",
    "@angular/compiler": "~2.4.0",
    "@angular/core": "~2.4.0",
    "@angular/forms": "~2.4.0",
    "@angular/http": "~2.4.0",
    "@angular/platform-browser": "~2.4.0",
    "@angular/platform-browser-dynamic": "~2.4.0",
    "@angular/router": "~3.4.0",

    "@ngrx/core": "^1.2.0",
    "@ngrx/store": "^2.2.1",
    "@ngrx/effects": "2.0.0",
    "ngrx-store-logger": "^0.1.7",
    "@ngrx/store-devtools": "^3.2.2",
    "@ngrx/store-log-monitor": "^3.0.2",

    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.1",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.35",
    "@types/node": "^6.0.46",
    "angular2-template-loader": "^0.4.0",
    "awesome-typescript-loader": "^2.2.4",
    "concurrently": "^3.1.0",

    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.24.1",
    "null-loader": "^0.1.1",
    "raw-loader": "^0.5.1",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "node-sass": "^4.1.1 ",

    "json-server": "^0.9.4",
    "rimraf": "^2.5.4",
    "typescript": "^2.0.10",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2",
    "webpack-merge": "^2.0.0"
  },
  "author": "Alexey (hiper2d) Zelenovsky",
  "license": "ISC"
}
